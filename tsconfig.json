{
    "compilerOptions": {
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "removeComments": false,
        "resolveJsonModule": true,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "lib": ["dom", "es2018"],
        "strict": true,
        "outDir": "./build/",
        "sourceMap": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "allowUmdGlobalAccess": true,
        "paths": {
            "__components/*": ["src/containers/*"],
            "__pages/*": ["./src/pages/*"],
            "__fonts/*": ["./src/fonts/*"],
            "__api/*": ["./src/api/*"],
            "__services/*": ["./src/services/*"],
            "__utils/*": ["./src/utils/*"],
            "__images/*": ["./src/images/*"],
            "__reducers/*": ["./src/reducers/*"],
            "__reducers": ["./src/reducers/index.ts"],
            "__types/*": ["./src/types/*"],
            "__store/*": ["./src/store/*"],
            "__selectors/*": ["./src/selectors/*"],
        },
        "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"],
    },
    "include": [
        "*.js",
        "*.*.js",
        "*.ts",
        "*.json",
        "*.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "src/typings/**/*.d.ts",
        "node_modules/@types",
    ],
    "compileOnSave": false,
    "exclude": ["public", "node_modules", "build"]
}
